<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireframe_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireframe_description"
            android:layout_marginBottom="24dp"/>

        <!-- Wireframe visualization area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EEEEEE"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Header wireframe -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="8dp"/>

            <!-- Content blocks wireframe -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#DDDDDD"
                    android:layout_marginEnd="8dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#DDDDDD"/>
            </LinearLayout>

            <!-- Footer wireframe -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#CCCCCC"/>

        </LinearLayout>

        <Button
            android:id="@+id/wireframe_print_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wireframe_print_button"
            android:textAllCaps="false"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"/>

    </LinearLayout>

</ScrollView>
